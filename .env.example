# Environment Configuration for RAG System
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=mongodb://localhost:27017/enhanced-rag-system
# For production, use MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/database

# Redis Cache
REDIS_URL=redis://localhost:6379
# For production, use ElastiCache: redis://your-elasticache-cluster.xxx.cache.amazonaws.com:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
# Use a strong random string in production (at least 32 characters)

# Google AI API
GOOGLE_AI_API_KEY=your-google-ai-api-key
# Get this from: https://makersuite.google.com/app/apikey

# Hugging Face (optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# File Upload Settings
MAX_FILE_SIZE=50000000  # 50MB in bytes
# Note: Files are processed in memory, not stored locally

# CORS Settings
FRONTEND_URL=http://localhost:3001

# AWS Settings (for production deployment)
# AWS_REGION=us-east-1
# AWS_ACCOUNT_ID=123456789012

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Vector Search Configuration
EMBEDDING_DIMENSIONS=768
VECTOR_SEARCH_LIMIT=10
