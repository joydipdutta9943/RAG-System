# Production Environment Configuration for RAG System
# Use this as a template for AWS deployment

# Application
NODE_ENV=production
PORT=3000

# Database - MongoDB Atlas (recommended for production)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/rag-system-prod

# Redis - ElastiCache (recommended for production)
REDIS_URL=redis://your-elasticache-cluster.xxx.cache.amazonaws.com:6379

# Authentication
JWT_SECRET=your-super-strong-production-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=7d

# Google AI API
GOOGLE_AI_API_KEY=your-production-google-ai-api-key

# Hugging Face (optional)
HUGGINGFACE_API_KEY=your-production-huggingface-api-key

# File Upload Settings
MAX_FILE_SIZE=50000000  # 50MB in bytes

# CORS Settings
FRONTEND_URL=https://your-domain.com

# AWS Settings
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Logging
LOG_LEVEL=warn
LOG_FILE=/usr/src/app/logs/app.log

# Rate Limiting (more restrictive for production)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=50

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Vector Search Configuration
EMBEDDING_DIMENSIONS=768
VECTOR_SEARCH_LIMIT=10

# Security
BCRYPT_ROUNDS=12

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics