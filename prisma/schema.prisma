// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  documents   Document[]
  chatHistory ChatHistory[]

  @@map("users")
}

model Document {
  id                String   @id @default(cuid()) @map("_id")
  title             String
  content           String
  fileType          String
  fileSize          Int
  embedding         Float[]
  metadata          Json?
  summary           String?
  entities          String[]
  topics            String[]
  sentiment         Float?
  language          String?
  category          String? // Auto-categorized document type
  categories        String[] // Multiple categories
  keyPoints         String[] // Extracted key points
  summaries         Json? // Multiple summary levels (one-sentence, paragraph, executive, chapters)
  extractedEntities Json? // Structured entity data with types
  readabilityScore  Float? // Document readability score
  qualityScore      Float? // AI-assessed quality score
  base64Content     String? // Base64 encoded file content

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("documents")
}

enum Role {
  USER
  ADMIN
  MODERATOR
}

model ChatHistory {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  message   String
  response  String
  sessionId String
  toolsUsed String[]
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("chat_history")
}

model Analytics {
  id         String   @id @default(cuid()) @map("_id")
  metricType String
  value      Float
  metadata   Json?
  timestamp  DateTime @default(now())

  @@map("analytics")
}
