{
	"name": "enhanced-rag-system",
	"version": "1.0.0",
	"description": "Enhanced RAG System with multi-modal capabilities",
	"main": "src/main.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run --watch src/main.ts",
		"build": "bun build src/main.ts --outdir ./dist --target node",
		"start": "NODE_ENV=production bun run dist/main.js",
		"start:dev": "bun run src/main.ts",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:migrate": "prisma migrate dev",
		"db:studio": "prisma studio",
		"test": "bun test",
		"lint": "biome check . --max-diagnostics=500 --diagnostic-level=error --log-kind=compact",
		"lint:fix": "biome check . --write --max-diagnostics=500 --diagnostic-level=error --log-kind=compact",
		"format": "biome format . --write --max-diagnostics=500",
		"format:check": "biome format . --max-diagnostics=500",
		"check": "tsc --noEmit && biome check . --diagnostic-level=error --log-kind=compact",
		"clean": "rm -rf dist",
		"prod": "bun run build && NODE_ENV=production bun run start"
	},
	"dependencies": {
		"@google/generative-ai": "^0.2.1",
		"@langchain/core": "^0.3.78",
		"@langchain/google-genai": "^0.2.18",
		"@prisma/client": "^6.15.0",
		"bcryptjs": "^2.4.3",
		"bull": "^4.12.2",
		"class-validator": "^0.14.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"express-validator": "^7.0.1",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"langchain": "^0.3.35",
		"mongodb": "^6.19.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"pdf-parse": "^1.1.1",
		"prisma": "^6.15.0",
		"redis": "^4.6.11",
		"reflect-metadata": "^0.1.13",
		"sharp": "^0.33.1",
		"socket.io": "^4.7.4",
		"tesseract.js": "^5.0.4",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/bun": "latest",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.11",
		"@types/pdf-parse": "^1.1.5"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
